<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SWPupupu.PageBase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWPupupu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="120*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0"
                        Grid.Row="0"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="0"
                        Grid.Row="1"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="0"
                        Grid.Row="2"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="0"
                        Grid.Row="3"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="1"
                        Grid.Row="0"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="2"
                        Grid.Row="0"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="3"
                        Grid.Row="0"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="4"
                        Grid.Row="0"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="1"
                        Grid.Row="1"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="2"
                        Grid.Row="1"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="3"
                        Grid.Row="1"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="4"
                        Grid.Row="1"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="1"
                        Grid.Row="2"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="2"
                        Grid.Row="2"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="3"
                        Grid.Row="2"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="4"
                        Grid.Row="2"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="1"
                        Grid.Row="3"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="2"
                        Grid.Row="3"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="3"
                        Grid.Row="3"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="4"
                        Grid.Row="3"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Padding="8"/>
                    <Grid Grid.Column="0"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock  Text="Изм."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid  Grid.Column="1"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Лист"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="2"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock  Text="№ документа"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="3"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock  Text="Подпись."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="4"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock  Text="Дата."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0"
                            Grid.Row="0"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Разраб."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="0"
                            Grid.Row="1"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Проверил"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="0"
                            Grid.Row="2"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Т.контр."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="0"
                            Grid.Row="3"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8"></Grid>
                    <Grid Grid.Column="0"
                            Grid.Row="4"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Н.контр."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="0"
                            Grid.Row="5"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBlock Text="Утв."
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="1"
                            Grid.Row="0"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBox TextAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                MinWidth="100"/>
                    </Grid>
                    <Grid Grid.Column="1"
                            Grid.Row="1"
                            BorderBrush="AliceBlue"
                            BorderThickness="1"
                            Padding="8">
                        <TextBox TextAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                MinWidth="100"/>
                    </Grid>
                    <Grid Grid.Column="1"
                    Grid.Row="2"
                    BorderBrush="AliceBlue"
                    BorderThickness="1"
                    Padding="8">
                        <TextBox TextAlignment="Center"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             MinWidth="100"/>
                    </Grid>
                    <Grid Grid.Column="1"
                          Grid.Row="4"
                          BorderBrush="AliceBlue"
                          BorderThickness="1"
                          Padding="8">
                        <TextBox TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 MinWidth="100"/>
                    </Grid>
                    <Grid Grid.Column="1"
                              Grid.Row="5"
                              BorderBrush="AliceBlue"
                              BorderThickness="1"
                              Padding="8">
                        <TextBox TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     MinWidth="100"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.40*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid Grid.Row="0"
                          BorderBrush="AliceBlue"
                          BorderThickness="1"
                          Padding="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                    Text="Обозначение чертежа"
                                    HorizontalAlignment="Center"/>
                        <TextBox Grid.Row="1"
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    MinWidth="200"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="15*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" BorderBrush="AliceBlue" BorderThickness="1">
                            <TextBlock>Наименование чертежа</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1" BorderBrush="AliceBlue" BorderThickness="1">
                            <TextBlock>Материал</TextBlock>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="15*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20*"/>
                                <RowDefinition Height="5*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15*"/>
                                    <ColumnDefinition Width="17*"/>
                                    <ColumnDefinition Width="18*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5*"/>
                                    <RowDefinition Height="15*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="0" Grid.Row="0" BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBlock Text="Лит." VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="0" BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBlock Text="Масса" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="2" Grid.Row="0" BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBlock Text="Масштаб" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="0" Grid.Row="1" BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBox VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="1" BorderBrush="AliceBlue" BorderThickness="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <TextBox Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
                                    <Button Grid.Row="1" Content="СИ" x:Name="Test_btn" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Test_btn_Click">
                                    </Button>

                                </Grid>
                                <Grid Grid.Column="2" Grid.Row="1" BorderBrush="AliceBlue" BorderThickness="1">

                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="30*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"  BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBlock Text="Лист" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1"  BorderBrush="AliceBlue" BorderThickness="1">
                                    <TextBlock Text="Листов" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" BorderBrush="AliceBlue" BorderThickness="1"></Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
